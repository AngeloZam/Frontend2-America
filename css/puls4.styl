gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24

body
	background #E8E8E8
	color gris_oscuro
	font-size 16px
	font-family Arial

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative

	.logo
		float left
		border-right 1px solid azul 
		width 60px
		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-size bold
			font-syle italic
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-syle italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black



		.titulo	
			font-size 18px
			font-weidth normal	
			margin 0
			padding 0

	.usuario
		position absolute
		top 0px
		right 0px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			
			img
				width 50px
				border-radius 50%	

		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0
			top 15px
			text-align right
			width 50%
						

nav
	background azul

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		text-align left
		white-space nowrap


		li
			display inline-block

			a 
				color white
				display block
				padding 0 0.2em
				margin 0 0.5em
				text-decoration none


		




